<h2> {{ section.settings.titulodasessao }} </h2>
<p> {{ section.settings.textodasessao }} </p>
<img src="{{ section.settings.imagemdasessao }}" alt="">
<hr>
{% for block in section.blocks %}
  <div {{ block.shopify_attributes }}>
    <img src="{{ block.settings.imagemdobloquinho }}" alt="">
      <p>{{ block.settings.textodobloquinho }}</p>
  </div>
{% endfor %}

{% schema %}
{
  "name": "Nome Customize",
  "tag": "section",
  "class": "classeadicional",
  "limit": 1,
  "max_blocks": 3,
  "settings": [
    {
      "type": "text",
      "id": "titulodasessao",
      "label": "TÃ­tulo"
    },
    {
      "type": "text",
      "id": "textodasessao",
      "label": "Texto"
    }, {
      "type": "image_picker",
      "id": "imagemdasessao",
      "label": "Imagem"
    }
  ],
  "blocks": [
    {
      "name": "Um bloco qualquer",
      "type": "bloquinho",
      "limit": 3,
      "settings": [
        {
          "type": "image_picker",
          "id": "imagemdobloquinho",
          "label": "Imagem do bloquinho"
        },
        {
          "type": "text",
          "id": "textodobloquinho",
          "label": "Texto do bloquinho"
        }
      ]
    }
  ]
}
{% endschema %}